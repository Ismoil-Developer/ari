<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:fitsSystemWindows="true"
    android:paddingTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/viewPagerRes"
                android:layout_width="match_parent"
                android:layout_height="291dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <ImageView
                android:id="@+id/imageLocationRes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_location_det"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewPagerRes"

                />

            <TextView
                android:id="@+id/workLocationRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/font_family_medium"
                android:text="@string/manzil"
                android:textColor="@color/gray500"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/workLocationTxt"
                app:layout_constraintStart_toEndOf="@id/imageLocationRes"
                app:layout_constraintTop_toTopOf="@id/imageLocationRes" />

            <TextView
                android:id="@+id/workLocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/font_family_medium"
                android:textColor="@color/text_color_bold"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/imageLocationRes"
                app:layout_constraintStart_toEndOf="@id/imageLocationRes"
                app:layout_constraintTop_toBottomOf="@id/workLocationRes" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="23dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@id/imageLocationRes" />

            <ImageView
                android:id="@+id/imagePhoneRes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_phone_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2"

                />

            <TextView
                android:id="@+id/workPhoneRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/font_family_medium"
                android:text="@string/telefon_raqam"
                android:textColor="@color/gray500"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/workPhoneTxt"
                app:layout_constraintStart_toEndOf="@id/imagePhoneRes"
                app:layout_constraintTop_toTopOf="@id/imagePhoneRes" />

            <TextView
                android:id="@+id/workPhoneTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/font_family_medium"
                android:textColor="@color/text_color_bold"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/imagePhoneRes"
                app:layout_constraintStart_toEndOf="@id/imagePhoneRes"
                app:layout_constraintTop_toBottomOf="@id/workPhoneRes" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="23dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@id/imagePhoneRes" />



            <ImageView
                android:id="@+id/imageQuestions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line3"
                />

            <TextView
                android:id="@+id/workQuestionsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/font_family_medium"
                android:text="@string/so_rovnoma"
                android:textColor="@color/text_color_medium"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/questionTxt"
                app:layout_constraintStart_toEndOf="@id/imageQuestions"
                app:layout_constraintTop_toTopOf="@id/imageQuestions" />

            <TextView
                android:id="@+id/questionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/font_family_medium"
                android:text="@string/boshqa_magazinlardan_harid_qilish"
                android:textColor="@color/text_color_bold"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/imageQuestions"
                app:layout_constraintStart_toEndOf="@id/imageQuestions"
                app:layout_constraintTop_toBottomOf="@id/workQuestionsTxt" />

            <ImageView
                android:id="@+id/imageQuestionsCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_selected_lan"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageQuestions"
                app:layout_constraintBottom_toBottomOf="@id/imageQuestions"
                app:layout_constraintEnd_toEndOf="parent"/>


            <ImageView
                android:id="@+id/imageQuestionsUnCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_unselected_lan"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="@id/imageQuestions"
                app:layout_constraintBottom_toBottomOf="@id/imageQuestions"
                app:layout_constraintEnd_toEndOf="parent" />


            <View
                android:id="@+id/circle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/imageQuestions"
                app:layout_constraintBottom_toBottomOf="@id/imageQuestions"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@id/circle" />

            <ImageView
                android:id="@+id/imageList"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_list_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                />

            <TextView
                android:id="@+id/listTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family_medium"
                android:text="@string/ro_yhat"
                android:textColor="@color/text_color_bold"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/imageList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageList" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@id/listTitle" />

            <TextView
                android:id="@+id/edtOrder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/edt_bg"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="start|top"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:textColor="@color/text_color_bold"
                app:layout_constraintTop_toBottomOf="@id/line4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:id="@+id/lineee"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/edtOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/line"
                />

            <LinearLayout
                android:id="@+id/orderUpdate"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lineee">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/house_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            :inputType="phone"
                            android:gravity="start|center_vertical"
                            android:padding="@dimen/_10sdp"
                            android:textSize="16sp"
                            android:textColor="@color/text_color_bold"
                            />

                        <TextView
                            android:id="@+id/appartment_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:padding="@dimen/_10sdp"
                            android:inputType="phone"
                            android:textSize="16sp"
                            android:textColor="@color/text_color_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/damophone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:padding="@dimen/_10sdp"
                            android:inputType="phone"
                            android:textSize="16sp"
                            android:textColor="@color/text_color_bold"/>

                        <TextView
                            android:id="@+id/floor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="phone"
                            android:textSize="16sp"
                            android:gravity="start|center_vertical"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/text_color_bold"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_message"
                            app:tint="#808080"
                            android:padding="10dp"
                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/otherMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:textSize="16sp"
                        android:inputType="text"
                        android:gravity="start|center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/text_color_bold"
                        />

                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/radio_button_unchecked_background"
                android:fontFamily="@font/font_family_medium"
                android:gravity="center"
                android:text="@string/bekor_qilish"
                android:textAllCaps="false"
                android:textColor="@color/text_color_bold"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/yes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderUpdate" />

            <TextView
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/font_family_medium"
                android:gravity="center"
                android:background="@drawable/back_style_button"
                android:text="@string/tahrirlash"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/no"
                app:layout_constraintTop_toBottomOf="@id/orderUpdate" />

            <TextView
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/font_family_medium"
                android:gravity="center"
                android:background="@drawable/back_style_button"
                android:text="@string/qayta_buyutma_berish"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/no" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/textContainer"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/backRes"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:padding="10dp"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/textRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_family"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>