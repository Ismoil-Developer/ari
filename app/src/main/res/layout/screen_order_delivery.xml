<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:fitsSystemWindows="true"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/icBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_color_bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:drawablePadding="6dp"
        android:fontFamily="@font/font_family"
        android:text="@string/buyurtma"
        android:textColor="@color/text_color_bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/icBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/icBack" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/orderContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icBack" />

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/orderContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icBack" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/my_location"
        app:layout_constraintEnd_toEndOf="@id/mapView"
        app:layout_constraintTop_toTopOf="@id/mapView"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/gps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/my_location" />

    </com.google.android.material.card.MaterialCardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orderContainerDelivery"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/back_order_prf"
        android:visibility="gone"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@id/orderContainer">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prfDelivery"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/courierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/font_family"
            android:gravity="center"
            android:text="Finding Driver ... "
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/courierRating"
            app:layout_constraintStart_toEndOf="@id/prfDelivery"
            app:layout_constraintTop_toTopOf="@id/prfDelivery" />

        <TextView
            android:id="@+id/courierRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="6dp"
            android:fontFamily="@font/font_family"
            android:gravity="center"
            android:text="4.9"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/prfDelivery"
            app:layout_constraintStart_toEndOf="@id/prfDelivery"
            app:layout_constraintTop_toBottomOf="@id/courierName" />


        <ImageView
            android:id="@+id/call"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_call"
            android:padding="10dp"
            android:src="@drawable/ic_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/message"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_call"
            android:padding="10dp"
            android:src="@drawable/ic_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/call"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orderFind"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/back_order_prf"
        android:visibility="visible"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@id/orderContainer">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prf"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/font_family"
            android:gravity="center"
            android:text="Finding Driver ... "
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/prf"
            app:layout_constraintStart_toEndOf="@id/prf"
            app:layout_constraintTop_toTopOf="@id/prf" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_navogation"
        android:elevation="10dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/linee"
            android:layout_width="62dp"
            android:layout_height="4dp"
            android:layout_marginBottom="15dp"
            android:background="@color/line_back"
            app:layout_constraintBottom_toTopOf="@id/directionText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/directionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/font_family"
            android:text="Kuryerning holati"
            android:textColor="@color/text_color_bold"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/stepContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stepContainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/deliveryTimeContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Step 1 -->
            <ImageView
                android:id="@+id/arrivedAtStore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shop_filled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#DDDDDD"
                app:layout_constraintEnd_toStartOf="@id/line"
                />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                app:layout_constraintEnd_toStartOf="@id/pickedUp"
                app:layout_constraintBottom_toBottomOf="@id/arrivedAtStore"
                app:layout_constraintStart_toEndOf="@id/arrivedAtStore"
                app:layout_constraintTop_toTopOf="@id/arrivedAtStore" />


            <!--            &lt;!&ndash; Step 2 &ndash;&gt;-->


            <ImageView
                android:id="@+id/pickedUp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_box_filled"
                app:layout_constraintBottom_toBottomOf="@id/arrivedAtStore"
                app:layout_constraintStart_toEndOf="@id/line"
                app:layout_constraintTop_toTopOf="@id/arrivedAtStore"
                app:tint="#DDDDDD"
                app:layout_constraintEnd_toStartOf="@id/line2"
                />

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="@id/arrivedAtStore"
                app:layout_constraintStart_toEndOf="@id/pickedUp"
                app:layout_constraintTop_toTopOf="@id/arrivedAtStore"
                app:layout_constraintEnd_toStartOf="@id/enRouteToCustomer"
                />

            <!-- Step 3 -->

            <ImageView
                android:id="@+id/enRouteToCustomer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_bike"
                app:layout_constraintBottom_toBottomOf="@id/arrivedAtStore"
                app:layout_constraintStart_toEndOf="@id/line2"
                app:layout_constraintTop_toTopOf="@id/arrivedAtStore"
                app:tint="#DDDDDD"
                app:layout_constraintEnd_toStartOf="@id/arrivedToCustomer"
                />

            <View
                android:id="@+id/arrivedToCustomer"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="@id/arrivedAtStore"
                app:layout_constraintStart_toEndOf="@id/enRouteToCustomer"
                app:layout_constraintTop_toTopOf="@id/arrivedAtStore"
                app:layout_constraintEnd_toStartOf="@id/handedOver"
                />


            <ImageView
                android:id="@+id/handedOver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_check_circle"
                app:layout_constraintBottom_toBottomOf="@id/arrivedAtStore"
                app:layout_constraintStart_toEndOf="@id/arrivedToCustomer"
                app:layout_constraintTop_toTopOf="@id/arrivedAtStore"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="#DDDDDD" />

            <TextView
                android:id="@+id/pickedUp2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:text="2"
                android:layout_marginEnd="-5dp"
                android:layout_marginTop="-5dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/pickedUp"
                app:layout_constraintTop_toTopOf="@id/pickedUp" />

            <TextView
                android:id="@+id/arrivedAtStore2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:text="2"
                android:layout_marginEnd="-5dp"
                android:layout_marginTop="-5dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/arrivedAtStore"
                app:layout_constraintTop_toTopOf="@id/arrivedAtStore" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deliveryTimeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/order_cost"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/myOrderTxtContainer"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/order_cost">

                <TextView
                    android:id="@+id/deliveryTimeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/font_family"
                    android:text="@string/yetkazib_berish_vaqti"
                    android:textColor="@color/text_color_bold"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/orderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/gray500"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/deliveryTimeTxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/deliveryTimeTxt" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/myOrderTxtContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/order_cost"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/costContainer"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/order_cost">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@id/myOrderTxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/myOrderTxt"
                    app:strokeColor="@color/buttonBgColor"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="@string/batafsil"
                        android:textColor="@color/buttonBgColor" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/myOrderTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/font_family"
                    android:text="@string/buyurtma"
                    android:textColor="@color/text_color_bold"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/costContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/order_cost"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeWidth="0dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/order_cost">

                <TextView
                    android:id="@+id/costTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/font_family"
                    android:text="Narx"
                    android:textColor="@color/text_color_bold"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/gray500"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/costTxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/costTxt" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

